{
  "extends": [
    "config:recommended"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "npm"
      ],
      "groupName": "npm grpc-tools",
      "matchPackageNames": [
        "/^grpc-tools/"
      ]
    },
    {
      "matchManagers": [
        "bundler"
      ],
      "groupName": "bundler grpc-tools",
      "matchPackageNames": [
        "/^grpc-tools/"
      ]
    }
  ]
}
